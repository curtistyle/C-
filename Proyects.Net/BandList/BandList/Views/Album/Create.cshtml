@using BandList.Models.ViewModels
@model AlbumViewModel

<h1>Agregar Nuevo Album</h1>

<div class="row">
	<div class="col-md-4">
		<form class="card p-3" asp-action="Create">
			<!--viewmodel-->
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>

			<!-- Titulo del Album -->
			<div class="form-group">
				<label asp-for="Title" class="control-label"></label>
				<input asp-for="Title" class="form-control" />
				<span asp-validation-for="Title" class="text-danger"></span>
			</div>
			<!-- Año de lanzamiento -->
			<div>
				<label asp-for="ReleaseDate" class="control-label"></label>
				<input type="date" asp-for="ReleaseDate" class="form-control" />
			</div>

			<!-- Id del Artista -->
			<div class="form-group">
				<label asp-for="ArtistId" class="control-label"></label>
				<!-- Usamos el diccionario ViewData de Create() de la clase Album Controller -->
				<!-- ViewBag.Data hace referencia al diccionario ViewData -->
				<select asp-for="ArtistId" class="form-control" asp-items="ViewBag.Artist"></select>
				<span asp-validation-for="Title" class="text-danger"></span>
				
			</div>

			<div class="form-group mt-3">
				<input type="submit" value="Crear" class="btn btn-primary"/>
			</div>
		</form>
	</div>
</div>

@section Scripts{
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}